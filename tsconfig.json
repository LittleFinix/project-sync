{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
      "sourceMap": true,
    // "module": "es6",
      "experimentalDecorators": true,
      "alwaysStrict": true,
      "checkJs": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "target": "es5",
      "jsx": "react"
    },
    "include": [
        "website/**/*.ts",
        "website/**/*.tsx",
        "website/**/*.d.ts",
        "server/**/*.ts",
        "server/**/*.tsx",
        "server/**/*.d.ts"
    ],
    "typeAcquisition": {
        "enable": true
    }
}